<h1>Showing articles list</h1>

<table border="1">
<thead>
    <tr>
        <td>
            <strong>Title</strong
        </td>
        <td>
            <strong>Description</strong
        </td>
        <td>
            <strong>Action</strong
        </td>
    </tr>
</thead>
<tbody>
    <% @articles.each do |article| %>
        <tr>
            <td><%= article.title %></td>
            <td><%= article.description %></td>
            <td><%= link_to 'Show', article_path(article) %> | <%= link_to 'Delete', article_path(article), data: { "turbo-method": :delete } %></td>

        </tr>
    <% end %>
</tbody>
</table>

<p><%= link_to 'Create new article', new_article_path %></p>
